<?xml version="1.0" encoding="UTF-8"?>
<beans  
    xmlns="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xmlns:p="http://www.springframework.org/schema/p"  
    xsi:schemaLocation="http://www.springframework.org/schema/beans  
               http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">  
               <bean id="employee" class="com.example1.Employee">
               <constructor-arg value="123" index="0"></constructor-arg>
                     <constructor-arg value="xyz" index="1"></constructor-arg>
                           <constructor-arg ref="address" index="2"></constructor-arg>
               </bean>
               <bean id="address" class="com.example1.Address">
               <constructor-arg value="2-175" index="0"></constructor-arg>
               <constructor-arg value="abc" index="1"></constructor-arg>
               </bean>
</beans>